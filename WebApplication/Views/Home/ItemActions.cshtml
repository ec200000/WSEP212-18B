@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    @model WebApplication.Models.ItemModel
    @using (Html.BeginForm("TryAddItem", "Home", FormMethod.Post))
    {
        @Html.EditorFor(model => model.quantity)
        @Html.ValidationMessageFor(model => model.quantity)

        @Html.TextBoxFor(model => model.itemName)
        @Html.ValidationMessageFor(model => model.itemName)
        
        @Html.TextBoxFor(model => model.description)
        @Html.ValidationMessageFor(model => model.description)
        
        @Html.EditorFor(model => model.price)
        @Html.ValidationMessageFor(model => model.price)

        @Html.TextBoxFor(model => model.category)
        @Html.ValidationMessageFor(model => model.category)
        <button class="w-10 btn btn-lg btn-primary" type="submit">Add Item To Store</button>
    }
</div>
<div>
   <select name="storesList" id="storesList">
               @{ int[] ItemsList = HttpContextAccessor.HttpContext.Session.GetObject<int[]>("items1");}
               @foreach (var dow in ItemsList)
               {
                   <option value="@dow">@dow</option>
               }
           </select>
           <input type="button" onclick="location.href='@Url.Action("TryAddItem", "Home")'" value="Remove Item From Store"/>
</div>
</body>
</html>